{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "dist",                    
    "strict": true,
    "strictNullChecks": true,
    "removeComments": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2018"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "types"]
}
